<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet">
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/cart.css">
</head>

<body>
    <%- include('header.ejs') %>
    <div class="cart-header">
        <h1 class="cart-title">Shopping Cart</h1>
    </div>
    <div class="container">
        <div class="cart-items">
            <% if (cartItems && cartItems.length > 0) { %>
                <% cartItems.forEach(item => { %>
                    <div class="cart-item">
                        <div class="cart-item-info">
                            <h4><%= item.book.Book_Name %></h4>
                            <p>Author: <%= item.book.Author %></p>
                            <p>Price: $<%= item.book.Price %></p>
                        </div>
                        <img src="<%= item.book.Image || '/placeholder.jpg' %>" alt="<%= item.book.Book_Name %>">
                        <div class="cart-item-actions">
                            <input type="number" class="quantity" value="<%= item.quantity %>" min="1">
                            <button class="remove-btn" data-id="<%= item.book._id %>">Remove</button>
                        </div>
                    </div>
                <% }); %>
                <div class="cart-total">
                    <h3>Total: $<%= totalPrice %></h3>
                </div>
                <a href="/checkout" class="checkout-button">Proceed to Checkout</a>
            <% } else { %>
                <p>Your cart is empty.</p>
            <% } %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script src="/js/script.js"></script>
</body>
</html>
