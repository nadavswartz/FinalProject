<!DOCTYPE html>
<html>
<head>
    <title>Checkout</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="style" href="css/checkout">
</head>
<body>
    <%- include('header.ejs') %>
    <br>
    <div class="container mt-5">
        <h2 class="mb-4">Checkout</h2>
        <form id="payment-form" action="/process-payment" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="cardNumber">Card Number</label>
                <input type="text" class="form-control" id="cardNumber" name="cardNumber" required>
            </div>
            <div class="form-group">
                <label for="expiryDate">Expiry Date</label>
                <input type="text" class="form-control" id="expiryDate" name="expiryDate" required>
            </div>
            <div class="form-group">
                <label for="cvv">CVV</label>
                <input type="text" class="form-control" id="cvv" name="cvv" required>
            </div>
            <button type="submit" class="pay">Pay</button>
        </form>

        <h2 class="mt-5">Cart Items</h2>
        <% let total=0; %>
        <% cartItems.forEach(item=> { %>
            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title"><%= item.book.Book_Name %></h5>
                    <p class="card-text">Price: <%= item.book.Price %></p>
                    <p class="card-text">Quantity: <%= item.quantity %></p>
                </div>
            </div>
            <% total += item.book.Price * item.quantity; %>
        <% }); %>
        <h4 class="mt-3">Total: <%= total %></h4>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="js/script.js"></script>
</body>
</html>
